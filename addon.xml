        <summary lang="en_GB">Videos of FOSDEM talks</summary>
        <description lang="en_GB">This addon provides access to videos published on https://video.fosdem.org</description>
        <language>en</language>
        <platform>linux</platform>
        <license>MIT</license>
        <forum></forum>
        <website>https://vdwaa.nl</website>
        <email>jelle@vdwaa.nl</email>
        <source>https://github.com/jelly/plugin.fosdem.org</source>
        <news></news>
        <disclaimer></disclaimer>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
    </extension>
</addon>
